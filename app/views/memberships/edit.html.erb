
<p> Business Name: <%= @membership.business_profile.business_name%></p>
<p> Business Profile ID: <%= @membership.business_profile_id  %></p>
<p> Lisiting starts on: <%= @membership.start_date%></p>
<p> <strong>Listing ends on: </strong><%= @membership.end_date%></p>


<div class="container">

<div class="options">
  <strong>Option 1 - Extend for 1 month</strong>
  <%= form_for @membership, url: membership_path(@membership) do |f| %>
    New listing ending date after renewal will be: <%= @membership.end_date + 1.months%>
    <%= f.hidden_field :end_date, value:@membership.end_date + 1.months%>  
    <%= f.hidden_field :business_profile_id, value:@business_profile.id%>
    <%= render partial: 'application/stripe_form', locals: {amount: 10}  %>
  <%end%>
</div>
 

