<div class="home-nav">
  <%= render 'nav' %>
</div>
<div class="jumbotron jumbotron-fluid mb-0 pb-0 pt-3">
  <div class="container">
    <h1 class="display-4  ">
      <span class="badge badge-info display-2 p-2">Find a Trade.com</span>
    </h1>
    <p class="lead">&nbsp Find your local tradie </p>
    <br>
  </div>
</div>
<div class="container p-5">
  <form action="/search" method="get">
    <div class="row">
      <div class="input-group mb-3 col-lg-6">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Trade</span>
        </div>
        <select name="trade[]" multiple=""  id="trade_selectbox" class="form-control" required >
        </select>
      </div>
      <div class="input-group mb-3 col-lg-6">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">Location</span>
        </div>
        <select name="location" id="location_selectbox" class="form-control" required>
        </select>
      </div>
    </div>
    <br>
    <div class="form-group text-center">
      <%= button_tag :class => "btn btn-info" do %>
        Search <%=fa_icon('search') %>
      <% end %>
    </div>
  </form>
</div>
<div class="category">
  <form action="/search/Melbourne" method="get">
    <h2>Popular in Melbourne</h2>
    <button type="submit" name="trade_all" value="2" class="m-2">
      <%= image_tag "t5.jpg", class:"img",width:"150",height:"120"%>
      <p class="category-text">Plumber</p>
    </button>
    <button type="submit" name="trade_all" value="5" class="m-2" >
      <%= image_tag "t4.jpg", class:"img",width:"150",height:"120"%>
      <p class="category-text">Gardener</p>
    </button>
    <button type="submit" name="trade_all" value="1"  class="m-2" >
      <%= image_tag "t1.jpg", class:"img" ,width:"150",height:"120"%>
      <p class="category-text">Electricain</p>
    </button>
    <button type="submit" name="trade_all" value="3" class="m-2">
      <%= image_tag "t3.jpg", class:"img",width:"150",height:"120"%>
      <p class="category-text">Painter</p>
    </button>
    <button type="submit" name="trade_all" value="4" class="m-2" >
      <%= image_tag "t2.jpg", class:"img",width:"150",height:"120"%>
      <p class="category-text">Tiler</p>
    </button>
  </form>
</div>
